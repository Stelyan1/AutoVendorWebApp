@using AutoVendor.Data.Models
@model IEnumerable<AutoVendor.Data.Models.BrandModel>


<h1 class="text-center">All Brand Models</h1>

<div class="container">
	<div class="row">
		@foreach (var brandModel in Model)
		{
			<div class="col-md-4">
				<div class="card mb-4 shadow-sm">
					<img src="@brandModel.ImageUrl" class="card-img-top" alt="@brandModel.Name">
					<div class="card-body">
						<h5 class="card-title">@brandModel.Name</h5>
					</div>
				</div>
			</div>
		}
	</div>
</div>
